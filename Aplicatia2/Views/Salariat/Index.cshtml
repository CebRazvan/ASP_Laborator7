@model IEnumerable<Aplicatia2.Models.Salariat>

@{
    ViewData["Title"] = "Index";
    var salariuMaxim = Model.Where(elev => elev.Salariu == Model.Max(e => e.Salariu)).First();
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salariu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salariu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<h3 class="mt-4">Persoana cu cel mai mare salariu:</h3>

<ul >
    <li>@salariuMaxim.Nume @salariuMaxim.Prenume, Salariul: <bold>@salariuMaxim.Salariu</bold></li>
</ul>
